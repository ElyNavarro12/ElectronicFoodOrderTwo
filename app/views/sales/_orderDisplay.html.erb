<section class="sideBar">
  <div class="added">
    <% if @order.foods.length > 0 %>
      <% @order.foods.each do |f| %>
        <div class="foods-in-order">
          <div class="food-in-order">
            <div class="head baseBox">
              <h3><%= "#{f.name}" %></h3>
              <h4>Total: <%= "#{f.total}" %></h4>
            </div>
            <div class="info baseBox">
              <p class="price">Precio: <%= "#{f.price}" %></p>
              <p class="qty"><%= "#{f.quantity}" %> Pedido(s)</p>
              <p></p>
            </div>
          </div>
        </div>
      <% end %>
      <div class="total">
        <h5>Total: <%= "#{@order.total}" %> </h3>
      </div>
    <% else %>
      <div class="empty">
        <div class="content">
          <span class="icon-cart"></span>
          <h3>La orden esta vacia</h3>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Teclado de modificacion de la orden !-->
  <div class="orderTools">
    <div class="keyboard baseBox">

      <!-- Opciones de pago !-->
      <div class="pay" id="checkout">
        <div class="content">
          <span class="icon-svg"></span>
          <h4>Pagar</h4>
        </div>
      </div>

      <!-- Teclado numerico !-->
      <table class="numeric">
        <tr>
          <th>9</th>
          <th>8</th>
          <th>7</th>
          <th class="dr selected">Cant.</th>
        </tr>
        <tr>
          <th>6</th>
          <th>5</th>
          <th>4</th>
          <th class="dr">Desc.</th>
        </tr>
        <tr>
          <th>3</th>
          <th>2</th>
          <th>1</th>
          <th class="dr">Precio</th>
        </tr>
        <tr>
          <th class="db">+/-</th>
          <th class="db">0</th>
          <th class="db">.</th>
          <th class="db dr">x</th>
        </tr>
      </table>

    </div>
  </div>
</section>
