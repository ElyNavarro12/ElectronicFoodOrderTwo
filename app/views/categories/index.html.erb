<%= render '/orders/header' %>
<div class="mainBox">
  <section>
    <div class="title">
      <h1>Showing the categories database</h1>
    </div>
    <div class="subtitle">
      <p>In this section you can check and have acces to the categories</p>
    </div>
  </section>
  <section class="article">
    <div class="articlehead">
      <h2>Listing al Categories</h1>
      </div>
    </div>
    <div clas="list">
      <table>
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'Show', category %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Nueva categoria', new_category_path() %>
    </div>
  </section>
</div>
