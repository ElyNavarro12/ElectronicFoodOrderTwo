<%= form_for @dish, html: { multipart: true } do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Precio %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :Descripcion %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :Imagen %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :Pertenece_a %>
    <%= f.select(:category_id, options_for_select(@categories)) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
